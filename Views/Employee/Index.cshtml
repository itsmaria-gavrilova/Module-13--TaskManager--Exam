@model IEnumerable<Task_Manager.Data.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<!-- Main Section for Employees -->
<div class="employees-section">
    <h2 class="header-title">@ViewData["Title"]</h2>

    <!-- Action Button -->
    <div class="action-buttons">
        <a href="@Url.Action("Create", "Employee")" class="btn btn-primary btn-lg">Add New Employee</a>
    </div>

    <!-- Employee Table Section -->
    <div class="employee-table-card">
        <div class="card-header">
            <h3>Employee Overview</h3>
        </div>
        <div class="card-body">
            <table class="employee-table table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Department</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.Name</td>
                            <td>@employee.Department.Name</td>
                            <td>
                                <a href="@Url.Action("Delete", "Employee", new { id = employee.ID })" class="btn btn-danger btn-sm" title="Delete Employee">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Custom Styling -->
<style>
    /* Background */
    body {
        font-family: 'Poppins', Arial, sans-serif;
        background: linear-gradient(135deg, #7F557D, #2E1042);
        color: #333;
        margin-top: 0;
    }

    /* Header Styling */
    .header-title {
        font-size: 42px;
        font-weight: 700;
        color: #ffffff;
        text-align: center;
        margin-top: 60px; /* Increased space between navbar and title */
        margin-bottom: 30px; /* Space below title */
        text-shadow: 3px 3px 5px rgba(0, 0, 0, 0.3);
    }

    /* Action Buttons Styling */
    .action-buttons {
        text-align: center;
        margin-bottom: 40px;
    }

    .btn-primary {
        background-color: #f39c12;
        border-color: #f39c12;
        font-weight: 600;
        border-radius: 5px;
        padding: 12px 30px;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #e67e22;
        border-color: #e67e22;
        transform: scale(1.05);
    }

    /* Employee Table Card Styling */
    .employee-table-card {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin: 0 auto;
        max-width: 1200px;
        overflow: hidden;
    }

    .card-header {
        background-color: #007bff;
        color: #ffffff;
        font-weight: 600;
        font-size: 1.5rem;
        padding: 18px;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        text-transform: uppercase;
        text-align: center;
    }

    .card-body {
        padding: 30px;
    }

    /* Table Styling */
    .employee-table th, .employee-table td {
        vertical-align: middle;
        text-align: center;
        padding: 12px;
    }

    .employee-table th {
        background-color: #f4f7fa;
        color: #2f3e4e;
        font-weight: 600;
    }

    .employee-table tbody tr {
        transition: background-color 0.3s ease;
    }

    .employee-table tbody tr:hover {
        background-color: #f1f1f1;
    }

    /* Button Styling */
    .btn {
        font-weight: 500;
        padding: 8px 15px;
        border-radius: 5px;
        transition: transform 0.2s ease;
    }

    .btn-sm {
        padding: 8px 15px;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #e0a800;
        transform: scale(1.05);
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #c82333;
        transform: scale(1.05);
    }

    /* Icon styling inside buttons */
    .btn i {
        margin-right: 5px;
    }

   
</style>
