@model Task_Manager.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Add New Employee";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        /* Background and Page Styling */
        body {
            font-family: 'Poppins', Arial, sans-serif;
            background: linear-gradient(135deg, #17DE63, #92F2F0); /* Elegant gradient background */
            background-attachment: fixed;
            color: #333;
            padding-top: 50px;
        }

        /* Title Styling */
        h1 {
            font-size: 36px;
            font-weight: 700;
            color: #ffffff;
            text-align: center;
            margin-top: 20px;
            margin-bottom: 40px;
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
        }

        /* Form Container */
        .task-form {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0px 10px 40px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: 0 auto;
        }

        /* Label Styling */
        .form-group label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            display: block;
        }

        /* Input Fields */
        .form-control {
            border-radius: 8px;
            border: 1px solid #ccc;
            padding: 15px;
            font-size: 1rem;
            color: #495057;
            margin-bottom: 25px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
            }

            /* Dropdown Styling */
            .form-control:focus, select:focus {
                border-color: #007bff;
                box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
            }

        /* Buttons */
        .btn-primary {
            background-color: #00c6ff;
            border-color: #00c6ff;
            font-weight: 600;
            padding: 15px 30px;
            border-radius: 8px;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #007bff;
                border-color: #007bff;
                transform: scale(1.05);
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            font-weight: 600;
            padding: 15px 30px;
            border-radius: 8px;
            font-size: 1.1rem;
            margin-top: 20px;
            transition: all 0.3s ease;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #5a6268;
                transform: scale(1.05);
            }

        /* Validation Styling */
        .text-danger {
            font-size: 0.875rem;
            margin-top: 5px;
        }

        /* Spacer between the form and footer */
        footer {
            margin-top: 40px;
            padding: 20px 0;
            text-align: center;
            background-color: #003459;
            color: white;
            font-size: 0.875rem;
        }
    </style>
</head>
<body>

    <main role="main">
        <h1>@ViewData["Title"]</h1>

        <div class="task-form">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Employee Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter employee name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="DepartmentID">Department</label>
                    <select asp-for="DepartmentID" class="form-control">
                        <option value="">-- Select Department --</option>
                        @foreach (var department in Model.Departments)
                        {
                            <option value="@department.ID">@department.Name</option>
                        }
                    </select>
                    <span asp-validation-for="DepartmentID" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create Employee</button>
            </form>

            <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary mt-3">Back to Employee List</a>

        </div>
    </main>

    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>

</html>
