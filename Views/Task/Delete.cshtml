@model Task_Manager.Data.Models.Task

@{
    ViewData["Title"] = "Delete Task";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        /* Background and Page Styling */
        body {
            font-family: 'Poppins', Arial, sans-serif;
            background: linear-gradient(135deg, #9b59b6, #4db6ac); /* Purple to teal gradient */
            background-attachment: fixed;
            color: #ffffff;
            padding-top: 50px;
        }

        /* Title Styling */
        h1 {
            font-size: 36px;
            font-weight: 700;
            color: #ffffff;
            text-align: center;
            margin-top: 20px;
            margin-bottom: 40px;
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
        }

        /* Form Container */
        .task-form {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0px 10px 40px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: 0 auto;
        }

        /* Label Styling */
        .form-group label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            display: block;
        }

        /* Button Styling */
        .btn-danger {
            background-color: #e74c3c;
            border-color: #e74c3c;
            font-weight: 600;
            padding: 15px 30px;
            border-radius: 8px;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #c0392b;
                border-color: #c0392b;
                transform: scale(1.05);
            }

        .btn-secondary {
            background-color: #4db6ac;
            border-color: #4db6ac;
            font-weight: 600;
            padding: 15px 30px;
            border-radius: 8px;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .btn-secondary:hover {
                background-color: #16a085;
                border-color: #16a085;
                transform: scale(1.05);
            }

        /* Confirmation Styling */
        .confirmation-text {
            font-size: 1.2rem;
            font-weight: 600;
            color: #333;
            text-align: center;
            margin-bottom: 40px;
        }

        /* Spacer between the form and footer */
        footer {
            margin-top: 40px;
            padding: 20px 0;
            text-align: center;
            background-color: #34495e;
            color: white;
            font-size: 0.875rem;
        }
    </style>
</head>

<body>
        <main role="main">
            <h1>@ViewData["Title"]</h1>

            <div class="task-form">
                <p class="confirmation-text">Are you sure you want to delete the task "<strong>@Model.Title</strong>"?</p>

                <form asp-action="Delete" method="post" asp-controller="Task">
                    <input type="hidden" asp-for="ID" />

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>

                    <div class="form-group text-center">
                        <a href="@Url.Action("Index", "Task")" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </main>

        <footer>
            <p>&copy; 2025 Task Manager. All rights reserved.</p>
        </footer>
    </div>

    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>

</html>
