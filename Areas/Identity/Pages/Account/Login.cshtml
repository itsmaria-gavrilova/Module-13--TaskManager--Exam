@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>
    body {
        font-family: 'Poppins', Arial, sans-serif;
        background: linear-gradient(135deg, #A65B3E, #6B2737,#E08E45);
        background-attachment: fixed;
        color: #333;
        margin-top: 0;
    }

    .navbar {
        background: #002b5c;
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.1);
        position: sticky;
        top: 0;
        z-index: 100;
        padding: 1rem;
    }

    .navbar-brand {
        color: #ffffff !important;
        font-weight: 700;
        font-size: 1.8rem;
        letter-spacing: 2px;
    }

    .navbar-nav .nav-link {
        color: #ffffff !important;
        font-weight: 500;
        padding: 12px 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .navbar-nav .nav-link:hover {
            color: #FFD700 !important;
            background-color: rgba(0, 0, 0, 0.15);
            border-radius: 4px;
        }

    .hero-section {
        background: url('https://via.placeholder.com/1920x800') center center no-repeat;
        background-size: cover;
        color: #ffffff;
        text-align: center;
        padding: 100px 0;
        position: relative;
    }

        .hero-section h1 {
            font-size: 50px;
            font-weight: 700;
            letter-spacing: 3px;
            text-shadow: 3px 3px 5px rgba(0, 0, 0, 0.4);
        }

        .hero-section p {
            font-size: 18px;
            margin-top: 20px;
            font-weight: 500;
        }

    .btn-primary {
        background-color: #f39c12;
        border-color: #f39c12;
        font-weight: 600;
        border-radius: 5px;
        padding: 12px 30px;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #e67e22;
            border-color: #e67e22;
            transform: scale(1.05);
        }

    .section {
        margin-bottom: 40px;
        padding: 40px 30px 20px; /* Reduced bottom padding */
        background-color: #f4f7fa;
        border-radius: 12px;
        max-width: 1020px;
        margin-left: auto; /* Centering the section */
        margin-right: auto;
    }

    .section-title {
        font-size: 32px;
        font-weight: 600;
        color: #2f3e4e;
        text-align: left;
        margin-bottom: 25px;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
        letter-spacing: 1px;
    }

    .card {
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        margin-bottom: 20px;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.15);
        }

    .card-header {
        background-color: #007bff;
        color: white;
        font-weight: 600;
        font-size: 1.2rem;
        padding: 18px;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        text-transform: uppercase;
    }

    .card-body {
        padding: 30px;
        font-size: 1rem;
        color: #495057;
    }

    footer {
        background-color: #003459;
        color: #ffffff;
        text-align: center;
        padding: 20px 0;
        font-size: 0.875rem;
        position: fixed;
        bottom: 0;
        width: 100%;
    }

        footer p {
            margin-bottom: 0;
        }
</style>
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use another service to log in.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
